{
  "name": "chef_node",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "The base role for systems connected to Chef Server",

  "run_list": [
    "recipe[chef-client::delete_validation]",
    "recipe[bluepill]",
    "recipe[chef-client]"
  ],

  "env_run_lists": {
  },

  "default_attributes": {
  },

  "override_attributes": {
    "chef_client": {
      "init_style": "bluepill",
      "interval": "60",
      "splay": "10",
      "config": {
        "ssl_verify_mode": ":verify_peer"
      }
    }
  }
}
